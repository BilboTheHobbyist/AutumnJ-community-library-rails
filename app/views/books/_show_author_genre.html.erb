 <div class="book-info">
  <% if book.authors.nil? || book.authors == [] %>
    <strong><%= t('.authors') %></strong>N/A</br>
  <% else %>
    <strong><%= t('.authors') %></strong><% book.authors.order(:name).all.each do |author| %>
      <ul><%= link_to author.name, author_path(author) %></ul>
    <% end %>
  <% end %>
  <% if book.genres.nil? || book.genres == [] %>
    <strong><%= t('.genres') %></strong>N/A  </br>
  <% else %>
    <strong><%= t('.genres') %></strong><% book.genres.order(:name).all.each do |genre| %>
       <ul><%= link_to genre.name, genre_path(genre) %></ul>
    <% end %>
  <% end %>
</div> 