<link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:700" rel="stylesheet">

<div class="show-title">
  <%= t('.book_info')%><% @book.user.name %>
</div>

<%= render partial:'show_basic_info', locals: {book: @book} %>
<%= render partial: 'show_author_genre', locals: {book: @book} %>

<div class="book-info">
  <% if @comments.present? %>
    <strong><%= t('.book_comment') %></strong>
      <%= render partial: 'comments/display_all', locals: {comments: @comments} %>
  <% end%>
</div>

<div class="links">
  <%= link_to(t('.book_borrow'), borrow_book_path(@book), method: "post") %>
</div>