 <h1><%= t('.h1') %></h1>

<div class="book-info">
  <% if !@comments.present? %>
    <i>No comments yet!</i>
  <% else %>
    <% @comments.all.each do |comment| %>

      <ul><i><%= t('.book') %></i><%= comment.book.title %><br>
      <i><%= t('.comment') %></i><%= comment.content %><br>
      <i><%= t('.comment_submitted') %></i><%= comment.updated_at.strftime("%A, %b %e, %Y") %><br>
      <%= link_to(t('.delete'), book_comment_path(comment.book, comment), method: "delete") %>|<%= link_to(t('.edit'), edit_book_comment_path(comment.book, comment)) %></ul>

    <% end %>
  <% end%>
</div>
