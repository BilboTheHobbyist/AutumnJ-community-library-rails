<h1>Your comments:</h1>

<div class="book-info">
<% if !@comments.present? %>
  <i>No comments yet!</i>
<% else %>
  <% @comments.all.each do |comment| %>

    <ul><i>Book Title: </i><%= comment.book.title %><br>
    <i>Comment: </i><%= comment.content %><br>
    <i> Comment submitted: </i><%= comment.updated_at.strftime("%A, %b %e, %Y") %><br>
    <a href="/books/<%= comment.book.id %>/comments/<%= comment.id %>">Delete</a>|<%= link_to "Edit", edit_book_comment_path(comment.book, comment) %></ul>

  <% end %>
  </div>
<% end%>